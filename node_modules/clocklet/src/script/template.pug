.clocklet
  .clocklet-plate
    .clocklet-dial.clocklet-dial--minute
      .clocklet-hand.clocklet-hand--minute
      for _, index in Array(60)
        button.clocklet-tick.clocklet-tick--minute(type="button" data-clocklet-tick-value=index style=tickPosition(index, 60, index % 5 ? 46 : 39))
    .clocklet-dial.clocklet-dial--hour
      .clocklet-hand.clocklet-hand--hour
      for _, index in Array(12)
        button.clocklet-tick.clocklet-tick--hour(type="button" data-clocklet-tick-value=index style=tickPosition(index, 12, 39))
    .clocklet-ampm
    .clocklet-hand-origin

-
  function tickPosition(value, maxValue, radius) {
    const angle = Math.PI * (.5 - 2 * value / maxValue)   // π/2 - 2πΘ
    const x = Math.round((50 + radius * Math.cos(angle)) * 10) / 10
    const y = Math.round((50 - radius * Math.sin(angle)) * 10) / 10
    return `left:${x}%;top:${y}%`
  }
