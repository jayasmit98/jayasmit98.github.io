                </li></a>
                <a href="/adminhospitals"><li class="menu_items">
                    <i class="fas fa-file-alt"></i>
                    <h4>Hospitals</h4>
                </li></a>
            </div>
        </div>
        <form class="data_container" action="/adminprofile/<%= users._id %>" method="POST" enctype="multipart/form-data">
            <div class="part_1">
                <h4>My Profile</h4>
                <button class="sky-blue" type="submit">Save Changes</button>
            </div>
            <div class="part_2">
                <h6>Profile Photo</h6>
                <div class="profile_photo_section">
                    
                    <div class="photo_container">
                        
                        <div class="photo_name">
                            <img src="../assets/uploads/<%= users.image%>" alt="">
                            <div class="photo_text">
                                <p>Pick a photo for your system</p>
                                <label for="image-upload" class="input_label">Select Photo</label>
                                <input type="file" id="image-upload" name="image" accept="image/*">
                            </div>
                        </div>
                    </div>
                    <div class="input_block">
                        <label for="name">Name</label>
                        <input id="name" type="text" name="name" value="<%=users.name%>" required>
                    </div>
                    
                </div>
            </div>
            <div class="part_3">
                <div class="input_block">
                    <label for="phone">Phone Number</label>
                    <div class="phone_input_container">
                        <input type="tel" name="phone" id="phone" value="<%= users.phone %>" pattern="[6789][0-9]{9}" readonly>
                        <i class="fas fa-pencil-alt"></i>
                    </div>
                    
                </div>
                <div class="input_block">
                    <label for="email">Email</label>
                    <input type="text" id="email" name="email" value="<%=users.email%>" readonly>
                </div>
                <div class="input_block">
                    <label for="gender">Gender</label>                    
                    <input type="text" id="gender" value="<%=users.gender%>" name="gender">
                </div>
                <div class="input_block">
                    <label for="dob">Date of Birth</label>
                    <input type="text" id="dob" value="<%=users.dob%>" name="dob">
                </div>
                <div class="input_block">
                    <label for="timezone">Time Zone</label>
                    <input type="text" id="timezone" name="timezone">
                </div>
            </div>
            <div class="part_4">
                <div class="input_block">
                    <label for="house">House Number/Street</label>
                    <input type="text" id="house" name="house">
                </div>
                <div class="input_block">
                    <label for="colony">Colony/Locality</label>
                    <input type="text" id="colony" name="colony">
                </div>
                <div class="input_block">
                    <label for="city">City</label>
                    <input type="text" id="city" value="<%=users.city%>" name="city">
                </div>
                <div class="input_block">
                    <label for="state">State</label>
                    <input type="text" id="state" value="<%=users.state%>" name="state">
                </div>
                <div class="input_block">
                    <label for="country">Country</label>
                    <input type="text" id="country" value="<%=users.country%>" name="country">
                </div>
            </div>
        </form>
    </section>
