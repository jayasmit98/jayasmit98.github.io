<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/5fdca5a363.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="../assets/css/reset.css">
    <link rel="stylesheet" href="../assets/css/theme.css">
    <link rel="stylesheet" href="../assets/css/profile.css">
    <script src="https://unpkg.com/@yaireo/tagify"></script>
    <script src="https://unpkg.com/@yaireo/tagify/dist/tagify.polyfills.min.js"></script>
    <link href="https://unpkg.com/@yaireo/tagify/dist/tagify.css" rel="stylesheet" type="text/css" />
    <title>Tvastra</title>
</head>
<body>
    <nav class="navbar">
        <div class="logo">
            <a href="/index"><img src="https://s3.ap-south-1.amazonaws.com/appdev.konfinity.com/css/tasks/Logo.jpg" alt="tvastra"></a>
        </div> 
        <i class="fas fa-bars"></i>
        <ul class="menubar">
            <a href="doctor"><li>Doctors</li></a>
            <a href="hospital"><li>Hospitals</li></a>
            <a href="Dentistry"><li>Treatment</li></a>
            <a href="about-us"><li>About</li></a>
        </ul>        
        <div class="top_button">
            <a href="tvastra-plus"><button class="sky-blue">Tvastra Plus</button></a>    
            <a href="query"><button class="dark-blue">Get a Quote</button></a>
            <div class="name_container">
                <h6><%= user.name %></h6>
                <i class="fas fa-angle-down"></i>
            </div>
        </div>
    </nav> 
    <div class="profile_section">
        <figure>
            <img src="https://s3.ap-south-1.amazonaws.com/appdev.konfinity.com/css/tasks/Logo.jpg" alt="tvastra">
        </figure>
        <ul class="list">
            <a href="/appointments">
                <li>My Appointments</li>
            </a>
            <a href="/records">
                <li>Medical Records</li>
            </a>
            <a href="/settings">
                <li>Settings</li>
            </a>
            <a href="/payments">
                <li>My Payments</li>
            </a>
            <% if(user.isdoctor=='true'){ %>{
                <a href="/add-schedule">
                    <li>Add Schedule</li>
                </a>
            <% } %>
            <a href="/logout">
                <li>Logout</li>
            </a>
        </ul>
    </div>
    <div class="profile_section_2">
        <div class="part_1">
            <% if(user.isdoctor) { %>
                <img src="../assets/uploads/<%=doctordetails.image%>" alt="profile image">
            <% }else{ %>
                <img src="../assets/uploads/<%=user.image%>" alt="profile image">
            <% } %>
            <h6><%= user.name %></h6>
        </div>
        <ul class="list">
            <a href="/appointments">
                <li>My Appointments</li>
            </a>
            <a href="/records">
                <li>Medical Records</li>
            </a>
            <a href="/settings">
                <li>Settings</li>
            </a>
            <% if(user.isdoctor){ %>
                <a href="/add-schedule">
                    <li>Add Schedule</li>
                </a>
            <% } %>
            <a href="/payments">
                <li>My Payments</li>
            </a>
            <a href="/logout">
                <li>Logout</li>
            </a>
        </ul>
    </div>
    <section class="change_number_container hide">
        <div class="change_number">
            <div class="part_1">
                <h3>Enter New Mobile Number</h3>
            </div>
            <div class="part_2" >
                <label for="phone">Phone Number</label>
                <input type="tel" name="phone" id="newphone" pattern="[6789][0-9]{9}">
                <button onclick="send()" class="sky-blue ">SEND OTP</button>  
            </div>
            <div class="part_3">
                <button class="dark-blue cancelview">Cancel</button>
            </div>
        </div>        
    </section>
    <section class="main_container">
        <div class="mob_header">
            <i class="fas fa-angle-double-right show-header"></i>
            <h3 class="show-header">Click to View Dashboard</h3>
            <div class="dashboard_phone hideit">
                <div class="part_1">
                    <i class="fas fa-angle-double-right"></i>
                    <h6>Dashboard</h6>
                </div>
                <ul class="part_2">
                    <a href="/profile"><li class="menu_items">
                        <i class="fas fa-file-alt"></i>
                        <h4>Profile</h4>
                    </li></a>
                    <a href="/appointments"><li class="menu_items">
                        <i class="fas fa-file-alt"></i>
                        <h4>Appointments</h4>
                    </li></a>
                    <a href="/medicalreports"><li class="menu_items">
                        <i class="fas fa-file-alt"></i>
                        <h4>Medical Reports</h4>
                    </li></a>
                    <% if(user.isdoctor){ %>
                        <a href="/add-schedule">
                            <li class="menu_items">
                                <i class="fas fa-file-alt"></i>
                                <h4>Add Schedule</h4>
                            </li>
                        </a>
                    <% } %>
                    <a href="settings"><li class="menu_items">
                        <i class="fas fa-file-alt"></i>
                        <h4>Settings</h4>
                    </li></a>
                </ul>
                <div class="part_3">
                    <i class="fas fa-angle-double-left"></i>
                    <h6 class="collapse">Collapse</h6>
                </div>
            </div>
        </div>
        <div class="mob_header_desktop ">
            <div class="part_1">
                <i class="fas fa-angle-double-right"></i>
                <h3>Dashboard</h3>
            </div>
            <ul class="part_2">
                <a href="/profile"><li class="menu_items">
                    <i class="fas fa-file-alt"></i>
                    <h4>Profile</h4>
                </li></a>
                <a href="/appointments"><li class="menu_items">
                    <i class="fas fa-file-alt"></i>
                    <h4>Appointments</h4>
                </li></a>
                <a href="/medicalreports"><li class="menu_items">
                    <i class="fas fa-file-alt"></i>
                    <h4>Medical Reports</h4>
                </li></a>
                <% if(user.isdoctor){ %>
                    <a href="/add-schedule">
                        <li class="menu_items">
                            <i class="fas fa-file-alt"></i>
                            <h4>Add Schedule</h4>
                        </li>
                    </a>
                <% } %>
                <a href="settings"><li class="menu_items">
                    <i class="fas fa-file-alt"></i>
                    <h4>Settings</h4>
                </li></a>
            </div>
        </div>
        <form class="data_container" action="/profile" method="POST" enctype="multipart/form-data">
            <div class="part_1">
                <h4>My Profile</h4>
                <button class="sky-blue" type="submit">Save Changes</button>
            </div>
            <div class="part_2">
                <h6>Profile Photo</h6>
                <div class="profile_photo_section">
                    
                    <div class="photo_container">
                        
                        <div class="photo_name">
                            <% if(user.isdoctor) { %>
                                <img src="../assets/uploads/<%=doctordetails.image%>" alt="profile image">
                            <% }else{ %>
                                <img src="../assets/uploads/<%=user.image%>" alt="profile image">
                            <% } %>
                            <div class="photo_text">
                                <p>Pick a photo for your system</p>
                                <label for="image-upload" class="input_label">Select Photo</label>
                                <input type="file" id="image-upload" name="image" accept="image/*">
                            </div>
                        </div>
                    </div>
                    <div class="input_block">
                        <label for="name">Name</label>
                        <input id="name" type="text" name="name" value="<%=user.name%>" required>
                    </div>
                    
                </div>
            </div>
            <div class="part_3">
                <div class="input_block">
                    <label for="phone">Phone Number</label>
                    <div class="phone_input_container">
                        <input type="tel" name="phone" id="phone" value="<%= user.phone %>" pattern="[6789][0-9]{9}" readonly>
                        <i class="fas fa-pencil-alt"></i>
                    </div>
                    
                </div>
                <div class="input_block">
                    <label for="email">Email</label>
                    <input type="text" id="email" name="email" value="<%=user.email%>" readonly>
                </div>
                <div class="input_block">
                    <label for="gender">Gender</label>                    
                    <input type="text" id="gender" value="<%=user.gender%>" name="gender">
                </div>
                <div class="input_block">
                    <label for="dob">Date of Birth</label>
                    <input type="text" id="dob" value="<%=user.dob%>" name="dob">
                </div>
                <div class="input_block">
                    <label for="timezone">Time Zone</label>
                    <input type="text" id="timezone" name="timezone">
                </div>
            </div>
            <div class="part_4">
                <div class="input_block">
                    <label for="house">House Number/Street</label>
                    <input type="text" id="house" name="house">
                </div>
                <div class="input_block">
                    <label for="colony">Colony/Locality</label>
                    <input type="text" id="colony" name="colony">
                </div>
                <div class="input_block">
                    <label for="city">City</label>
                    <input type="text" id="city" value="<%=user.city%>" name="city">
                </div>
                <div class="input_block">
                    <label for="state">State</label>
                    <input type="text" id="state" value="<%=user.state%>" name="state">
                </div>
                <div class="input_block">
                    <label for="country">Country</label>
                    <input type="text" id="country" value="<%=user.country%>" name="country">
                </div>
            </div>
            <% if(user.isdoctor) { %>
                <div class="part_5">
                    <div class="input_block">
                        <label for="hospital">Your Hospital</label>
                        <input type="text" id="hospital" value="<%=doctordetails.hospitals%>" name="hospital">
                    </div>
                    <div class="input_block">
                        <label for="achievments">achievments</label>
                        <input type="text" id="achievments" value="<%=doctordetails.achievements%>" name="achievments">
                    </div>
                    <div class="input_block">
                        <label for="experience">Experience</label>
                        <input type="number" id="experience" value="<%=doctordetails.experience%>" name="experience">
                    </div>
                    <div class="input_block">
                        <label for="qualifications">Qualifications</label>
                        <input type="text" id="qualifications" value="<%=doctordetails.qualification%>"  name="qualifications">
                    </div>
                    <div class="input_block">
                        <label for="awards">Awards</label>
                        <input type="text" id="awards" value="<%=doctordetails.awards%>" name="awards">
                    </div>
                    <div class="input_block">
                        <label for="specialization">specialization</label>
                        <input type="text" id="specialization" value="<%=doctordetails.specialization%>" name="specialization">
                    </div>
                    <div class="input_block">
                        <label for="fees">Fees</label>
                        <input type="text" id="fees" value="<%=doctordetails.fees%>" name="fees">
                    </div>
                    
                    

                </div>
                <div class="part_6">
                    <div class="input_block">
                        <label for="description">Description</label>
                        <textarea name="description" id="description"  cols="30" rows="3"><%=doctordetails.description%></textarea>
                    </div>
                </div>
            <% } %>
        </form>
    </section>
     <section class="help">
        <div class="help_container">
            <div class="left">
                <h2>Need Help?</h2>
                <p>Just let us know, we will happy to assist you</p>
            </div>
            <div class="right">
                <a href="/src/client/views/query.html"><button class="sky-blue">Submit your enquiry</button></a>
            </div>
        </div>       
    </section>
    <footer class="footer">
        <img src="https://s3.ap-south-1.amazonaws.com/appdev.konfinity.com/css/tasks/footer.png" alt="logo">
        
            <ul class="tags">
                <a href="doctor"><li>Doctors</li></a>
                <a href="hospital"><li>Hospitals</li></a>
                <a href="Dentistry"><li>Treatment</li></a>
                <a href="contact"><li>Contact Us</li></a>
                <a href="FAQ"><li>FAQs</li></a>
            </ul>
        
        <div class="logos">
            <i class="fab fa-facebook-f"></i>
            <i class="fab fa-pinterest-p"></i>
            <i class="fab fa-twitter"></i>
            <i class="fab fa-google-plus"></i>
            <i class="fab fa-instagram"></i>
        </div>
        <div class="copyright">
            <p>All Rights Reserved. © tvastra 2021</p>
        </div>
    </footer>
    <script type="text/javascript" src="../assets/scripts/index.js"></script>
    <script src="../assets/scripts/profile.js"></script>
    <script>
        var inp1= document.querySelector('input[name=hospital]');
        var inp2= document.querySelector('input[name=achievments]');
        var inp3= document.querySelector('input[name=qualifications]');
        var inp4= document.querySelector('input[name=awards]');
        var inp5= document.querySelector('input[name=specialization]');
        

        new Tagify(inp1);
        new Tagify(inp2);
        new Tagify(inp3);
        new Tagify(inp4);
        new Tagify(inp5);
       
        
    </script>
</body>
</html>