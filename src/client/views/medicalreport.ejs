                <li>Settings</li>
            </a>
            <a href="/logout">
                <li>Logout</li>
            </a>
        </ul>
    </div>
    <section class="add_record_container hide"> <!-- container for the add record window-->
        <form class="add_record" action="/addrecords" method="POST" enctype="multipart/form-data"> <!--actual container-->
            <div class="part_1">
                <div class="part__1">
                    <i class="fas fa-plus"></i>
                    <label for="add-photo">Add Photo</label>
                </div>
                <div class="part__2">
                    <input type="file" name="files" id="add-photo" multiple >
                </div>
                <div class="inner_image" id="preview_sect">
                    <img src="" alt="" id="prev_0">
                    <img src="" alt="" id="prev_1">
                </div>
            </div>
            <div class="part_2">
                <input type="text" name="title" placeholder="title">
                <input type="text" name="name" placeholder="name">
                <input type="date" name="date">
            </div>
            <div class="part_3">
                <h4>Type of Report</h4>
                <div class="part__1">
                    <div class="input_container">
                        <input type="radio" name="report" id="report" value="report">
                        <label for="report">Report</label>
                        
                    </div>
                    <div class="input_container">   
                        <input type="radio" name="report" id="prescription" value="prescription">
                        <label for="prescription">Prescription</label>
                        
                    </div>
                    <div class="input_container">
                        <input type="radio" name="report" id="invoice" value="invoice">
                        <label for="invoice">Invoice</label>
                        
                    </div>
                    
                    
                </div>
            </div>
            <div class="part_4">
                <button type="submit" class="sky-blue">Done</button>
                <button class="dark-blue cancel">Cancel</button>
            </div>
        </form> 
    </section>
    <section class="main_container">
        <div class="mob_header">
            <i class="fas fa-angle-double-right show-header"></i>
            <h3 class="show-header">Click to View Dashboard</h3>
            <div class="dashboard_phone hideit">
                <div class="part_1">
                    <i class="fas fa-angle-double-right"></i>
                    <h6>Dashboard</h6>
                </div>
                <ul class="part_2">
                    <a href="/profile"><li class="menu_items">
                        <i class="fas fa-file-alt"></i>
                        <h4>Profile</h4>
                    </li></a>
                    <a href="/appointments"><li class="menu_items">
                        <i class="fas fa-file-alt"></i>
                        <h4>Appointments</h4>
                    </li></a>
                    <a href="/records"><li class="menu_items">
                        <i class="fas fa-file-alt"></i>
                        <h4>Medical Reports</h4>
                    </li></a>
                    <a href="settings"><li class="menu_items">
                        <i class="fas fa-file-alt"></i>
                        <h4>Settings</h4>
                    </li></a>
                </ul>
                <div class="part_3">
                    <i class="fas fa-angle-double-left"></i>
                    <h6 class="collapse">Collapse</h6>
                </div>
            </div>
        </div>
        <div class="mob_header_desktop ">
            <div class="part_1">
                <i class="fas fa-angle-double-right"></i>
                <h3>Dashboard</h3>
            </div>
            <ul class="part_2">
                <a href="/profile"><li class="menu_items">
                    <i class="fas fa-file-alt"></i>
                    <h4>Profile</h4>
                </li></a>
                <a href="/appointments"><li class="menu_items">
                    <i class="fas fa-file-alt"></i>
                    <h4>Appointments</h4>
                </li></a>
                <a href="/records"><li class="menu_items">
                    <i class="fas fa-file-alt"></i>
                    <h4>Medical Reports</h4>
                </li></a>
                <a href="settings"><li class="menu_items">
                    <i class="fas fa-file-alt"></i>
                    <h4>Settings</h4>
                </li></a>
            </div>
        </div>
        <div class="data_container">
            <div class="part_1">
                <h2>Medical Records</h2>
                <button class="sky-blue add-records">Add Records</button>
            </div>
            <div class="part_2">
                <% for(var i=0;i<record.length;i++) { %>    
                    <div class="inner_data">
                        <div class="part_1">
                            <h6><%= record[i].date %></h6>
                        </div>
                        <ul class="part_2">
                            <li><%= record[i].name %></li>
                            <li><%= record[i].title %></li>
                            <li><%= record[i].report %></li>
                        </ul>
                        <div class="part_3">
                            <form action="/deleterecord/<%=record[i]._id %>" method="POST">
                                <button type="submit" class="sky-blue">Delete</button>
                            </form>                            
                        </div>
                    </div>
                <% } %>    
            </div>
        </div>
    </section>
     <section class="help">
        <div class="help_container">
            <div class="left">
                <h2>Need Help?</h2>
                <p>Just let us know, we will happy to assist you</p>
            </div>
            <div class="right">
                <a href="/src/client/views/query.html"><button class="sky-blue">Submit your enquiry</button></a>
