        </ul>
    </div> 
    <section class="intro">
        <h3>Cardiac Surgeon in <span>Delhi</span></h3>
    </section>
    <section class="doctors">
        <header class="sort">
            <h5>Home / Doctor List</h5>
            <select name="sort" id="">
                <option value="">Sort By</option>
            </select>
        </header>
        <div class="doctor_container">
            <div class="left">
                <header class="filter_container">
                    <div class="filter_container_1">
                        <h6>Filter By</h6>
                    </div>
                    <div class="filter_container_2">
                        <div class="filter_tag">
                           <p>DLF Cyber City</p> 
                           <i class="fas fa-times"></i>
                        </div>
                        <div class="filter_tag">
                            <p>Multi Organ Transplant</p>
                            <i class="fas fa-times"></i>
                        </div>
                        <div class="filter_tag">
                            <p>Apollo Hospital</p>
                            <i class="fas fa-times"></i>
                        </div>
                        <div class="filter_tag">
                            <p>30+</p>
                            <i class="fas fa-times"></i>
                        </div>
                    </div>
                    
                </header>
                <div class="location">
                    <header>
                        <h6>Location</h6>
                        <i class="fas fa-search"></i>
                    </header>
                    <div class="data_container">
                        <label class="labels" for="DLF">
                            <input type="checkbox" class="options" id="DLF" value="DLF Cyber City">
                        DLF Cyber City</label>
                        <label class="labels" for="Dwarka">
                            <input type="checkbox" class="options" id="Dwarka" value="Dwarka">
                        Dwarka</label>
                        <label for="Lajpat" class="labels">
                            <input type="checkbox" class="options" id="Lajpat" value="Lajpat Nagar">
                        Lajpat Nagar</label>
                        <label for="Palam" class="labels">
                            <input type="checkbox" class="options" id="Palam" value="Palam Vihar">
                        Palam Vihar</label>
                        <label for="Punjabi" class="labels">
                            <input type="checkbox" class="options" id="Punjabi" value="Punjabi Bagh">
                        Punjabi Bagh</label>
                        <label for="Pusa" class="labels">
                            <input type="checkbox" class="options" id="Pusa" value="Pusa Road">
                        Pusa Road</label>
                    </div>
                    <div class="bottom">
                        <p>+ Show More</p>
                    </div>
                </div>
                <div class="treatment">
                    <header>
                        <h6>Treatment</h6>
                        <i class="fas fa-search"></i>
                    </header>
                    <div class="data_container">
                        <label class="labels" for="Mulit">
                            <input type="checkbox" class="options" id="Multi" value="Multi Organ Transplant">
                        Multi Organ Transplant</label>
                        <label class="labels" for="Orthopedic">
                            <input type="checkbox" class="options" id="Orthopedic" value="Orthopedic Surgery">
                        Orthopedic Surgery</label>
                        
                        <label for="Infertility" class="labels">
                            <input type="checkbox" class="options" id="Infertility" value="Infertility Treatment">
                        Infertility Treatment</label>
                        <label for="Dentistry" class="labels">
                            <input type="checkbox" class="options" id="Dentistry" value="Dentistry">
                        Dentistry</label>
                        <label for="Cardiology" class="labels">
                            <input type="checkbox" class="options" id="Cardiology" value="Cardiology">
                        Cardiology</label>
                        <label for="Cancer" class="labels">
                            <input type="checkbox" class="options" id="Cancer" value="Cancer">
                        Cancer</label>
                    </div>
                    <div class="bottom">
                        <p>+ Show More</p>
                    </div>
                </div>
                <div class="hospitals">
                    <header>
                        <h6>Hospitals</h6>
                        <i class="fas fa-search"></i>
                    </header>
                    <div class="data_container">
                        <label class="labels" for="Apollo">
                            <input type="checkbox" class="options" id="Apollo" value="Apollo Hospital">
                        Apollo Hospital</label>
                        <label class="labels" for="Manipal">
                            <input type="checkbox" class="options" id="Manipal" value="Manipal North Side Hospital">
                        Manipal North Side Hospital</label>
                        <label for="Northstar" class="labels">
                            <input type="checkbox" class="options" id="Northstar" value="Northstar">
                        Northstar</label>
                        <label for="AIIMS" class="labels">
                            <input type="checkbox" class="options" id="AIIMS" value="AIIMS">
                        AIIMS</label>
                        <label for="Fortis" class="labels">
                            <input type="checkbox" class="options" id="Fortis" value="Fortis Hospital">
                        Fortis Hospital</label>
                        <label for="Elbit" class="labels">
                            <input type="checkbox" class="options" id="Elbit" value="Elbit Diagnostic">
                        Elbit Diagnostic</label>
                    </div>
                    <div class="bottom">
                        <p>+ Show More</p>
                    </div>
                </div>
                <div class="experience">
                    <header>
                        <h6>Year of Experience</h6>
                        <i class="fas fa-search"></i>
                    </header>
                    <div class="data_container">
                        <label class="labels" for="30">
                            <input type="checkbox" class="options" id="30" value="30+">
                        30+</label>
                        <label class="labels" for="25">
                            <input type="checkbox" class="options" id="25" value="25+">
                        25+</label>
                        <label for="20" class="labels">
                            <input type="checkbox" class="options" id="20" value="20+">
                        20+</label>
                        <label for="15" class="labels">
                            <input type="checkbox" class="options" id="15" value="15+">
                        15+</label>
                        <label for="10" class="labels">
                            <input type="checkbox" class="options" id="10" value="10+">
                        10+</label>
                        <label for="5" class="labels">
                            <input type="checkbox" class="options" id="12" value="5+">
                        12+</label>
                    </div>
                    <div class="bottom">
                        <p>+ Show More</p>
                    </div>
                </div>
            </div>
            <div class="right">
                <% for(var i=0;i<docs.length;i++){%>
                    <figure class="doctor_card">
                        <figcaption>
                            <div class="name">
                            <a href="/doctor-profile"><h5><%= docs[i].name %></h5></a>
                            </div>
                            <ul>
                                <li>
                                    <span><i class="fas fa-certificate"></i></span>
                                    <%= docs[i].specialization %>
                                </li>
                                <li>
                                    <span><i class="fas fa-award"></i></span>
                                    <%= docs[i].awards %>
                                </li>
                                <li>
                                    <span><i class="far fa-clock"></i></span>
                                    <%= docs[i].experience %>
                                </li>
                                <li>
                                    <span><i class="far fa-building"></i></span>
                                    <%= docs[i].hospitals%>
                                </li>
                                <li>
                                    <span><i class="fas fa-map-marker-alt"></i></span>
                                    <%= docs[i].state %>
                                </li>
                            </ul> 
                            <div class="button_book">
                                <button class="dark-blue trigger" onclick="showslots('showslots<%=docs[i]._id %>','<%= docs[i]._id %>')">Book an appointment</button>
                            </div>
                        </figcaption>               
                        <div class="image">
                            <img src="../assets/uploads/<%= docs[i].image %>" alt="Doctor's Image">
                        </div>
                        <div class="part_2 hide" id="showslots<%= docs[i]._id %>">
                            <div class="leftarrow">
                                <i class="fas fa-chevron-left" onclick="movecar('left','slotmid<%=docs[i]._id%>')"></i>
                            </div>
                            <div class="mid" id="slotmid<%= docs[i]._id %>">
                                <div class="dates 0" id="0" onclick="showsubslots('subslots<%=docs[i]._id %>','<%=docs[i]._id %>', 0)">
                                    
                                </div>
                                <div class="dates 1" id="1" onclick="showsubslots('subslots<%=docs[i]._id %>','<%=docs[i]._id %>', 1)">
                                    
                                </div>
                                <div class="dates 2" id="2" onclick="showsubslots('subslots<%=docs[i]._id%>','<%=docs[i]._id %>', 2)">
                                    
                                </div>
                                <div class="dates 3 inactive" id="3" onclick="showsubslots('subslots<%=docs[i]._id %>','<%=docs[i]._id %>', 3)">
                                    
                                </div>
                                <div class="dates 4 inactive" id="4" onclick="showsubslots('subslots<%=docs[i]._id %>','<%= docs[i]._id%>', 4)">
                                    
                                </div>
                                <div class="dates 5 inactive" id="5" onclick="showsubslots('subslots<%=docs[i]._id %>','<%= docs[i]._id%>', 5)">

                                </div>
                                <div class="dates 6 inactive" id="6" onclick="showsubslots('subslots<%=docs[i]._id %>','<%= docs[i]._id%>', 6)">
                                    
                                </div>
                            </div>
                            <div class="rightarrow">
                                <i class="fas fa-chevron-right" onclick="movecar('right','slotmid<%=docs[i]._id%>')"></i>
                            </div>
                        </div>
                        <div class="part_3 hide" id="subslots<%= docs[i]._id %>">
                            <div class="slots">
                                <h5>Morning</h5>
                                <ul id="morning<%=docs[i]._id %>"></ul>
                            </div>
                            <div class="slots">
                                <h5>Afternoon</h5>
                                <ul id="afternoon<%=docs[i]._id %>"></ul>
                            </div>
                            <div class="slots">
                                <h5>Evening</h5>
                                <ul id="evening<%=docs[i]._id %>"></ul>
                            </div>
                        </div>             
                    </figure>
                <% } %>
                
            </div>
            
            
        </div>
    </section>
    <section class="help">
        <div class="help_container">
            <div class="left">
                <h2>Need Help?</h2>
                <p>Just let us know, we will happy to assist you</p>
            </div>
            <div class="right">
                <a href="/query.html"><button class="sky-blue">Submit your enquiry</button></a>
            </div>
        </div>       
    </section>
    <footer class="footer">
        <img src="https://s3.ap-south-1.amazonaws.com/appdev.konfinity.com/css/tasks/footer.png" alt="logo">
        
